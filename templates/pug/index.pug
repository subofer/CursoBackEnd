doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')
    title Con PUG
    script(src="/socket.io/socket.io.js").


  body.container.bg-light
    header
        ul.nav.nav-tabs
          li.nav-item
            a.nav-link(aria-current='page', href='/') Formulario
          |       
          li.nav-item
            a.nav-link(href='/productos') Productos
    h2.text-primary.mt-2 Ingrese datos PUG
    form(onsubmit="return enviar(event)")
      .mb-3
        label.form-label(for='title') T&iacute;tulo
        input.form-control(type='text', name='title')
      .mb-3
        label.form-label(for='price') Precio
        input.form-control(type='number', name='price')
      .mb-3
        label.form-label(for='thumbnail') Link foto
        input.form-control(type='text', name='thumbnail')
        input.btn.btn-success(type='submit' value='Cargar producto')
    
    h2.text-danger.mt-4 Productos cargados PUG
    table.table
      thead
        tr
          th(scope='col') #
          th(scope='col') TÃ­tulo
          th(scope='col') Precio
          th(scope='col') URL imagen
        tbody(id='productos')
    
    div.chat  
      h3 Let's go Chat UWU!
      table.table.table-dark.table-bordered(id='tablaChat')
        thead
          tr
            th(scope='col' class='col-2') Horario
            th(scope='col' class='col-1') Usuario 
            th(scope='col' class='col-9') Mensaje
          tbody(id='chatWindows')
      input(type='text' id='userName')
      input(type='text' id='chatInput')
      button(onclick='sendChatMessage(event)') Enviar
    
    script
      include index.js

